{
    "name": "roberts/laravel-singledb-tenancy",
    "description": "Laravel package for single database multi-tenancy",
    "keywords": [
        "laravel package",
        "single database",
        "multi-tenancy"
    ],
    "homepage": "https://github.com/roberts/laravel-singledb-tenancy",
    "license": "MIT",
    "authors": [
        {
            "name": "Drew Roberts",
            "email": "github@drewroberts.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "roberts/support": "^12.1",
        "spatie/laravel-package-tools": "^1.92",
        "illuminate/contracts": "^12.26"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "nunomaduro/collision": "^8.8.2",
        "larastan/larastan": "^3.7",
        "orchestra/testbench": "^10.0.0",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-phpunit": "^2.0.7"
    },
    "autoload": {
        "psr-4": {
            "Roberts\\LaravelSingledbTenancy\\": "src/",
            "Roberts\\LaravelSingledbTenancy\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Roberts\\LaravelSingledbTenancy\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Roberts\\LaravelSingledbTenancy\\LaravelSingledbTenancyServiceProvider"
            ],
            "aliases": {
                "LaravelSingledbTenancy": "Roberts\\LaravelSingledbTenancy\\Facades\\LaravelSingledbTenancy"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}